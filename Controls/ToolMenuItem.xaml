<UserControl x:Name="userControl" x:Class="NodeGraphTest.Controls.ToolMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeGraphTest.Controls"
             mc:Ignorable="d">
    <Button x:Name="ToolMenuBtn" Style="{StaticResource ArrowBtn}" MouseEnter="Button_MouseEnter" MouseDown="Button_MouseDown" MouseLeave="Button_MouseLeave">
        <Image x:Name="iconHolder" Margin="1.5" Source="{Binding Icon, ElementName=userControl}"/>
    </Button>
</UserControl>
